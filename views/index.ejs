<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movise Poster</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .imgPoster img {
            width: 100%;
            height: 450px;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
    </style>
</head>
<body class="bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mt-5 text-white">Movie Poster</h1>
                <!-- poster form -->
                <div class="d-flex justify-content-center">
                    <div class="bg-primary-subtle p-5" style="width: 600px; height: auto;">
                        <form action="/addMovieToList" method="post" enctype="multipart/form-data">
                            <div>
                                <label class="fw-medium">Title</label>
                                <input type="text" class="form-control" name="title">
                            </div>
                            <div>
                                <label class="fw-medium">Description</label>
                                <textarea name="description" class="form-control"></textarea>
                            </div>
                            <div>
                                <label class="fw-medium">Release Date</label>
                                <input type="date" class="form-control" name="releaseDate">
                            </div>
                            <div class="d-flex">
                                <div class="col-6 pe-3">
                                    <label class="fw-medium">Genre</label>
                                    <input type="text" class="form-control" name="genre">
                                </div>
                                <div class="col-6">
                                    <label class="fw-medium">Rating</label>
                                    <input type="number" class="form-control" name="rating" min="1" max="10">
                                </div>
                            </div>
                            <div>
                                <label class="fw-medium">Poster: </label>
                                <input type="file" class="form-control" name="posterName">
                            </div>
                            <button type="submit" class="btn btn-outline-info mt-3 text-white">Add Movie</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 pb-5">
                    <h1 class="text-center mt-5 text-white">Movie Poster view</h1>
                </div>
                <% MovieList.forEach((movie)=> { %>
                    <div class="col-3 mb-4">
                        <div class="card" style="width: 20rem; border-radius: 15px;">
                            <div class="imgPoster">
                                <img src="<%= movie.path %>" alt="<%= movie.title %>" class="img-fluid">
                            </div>
                            <div class="card-body">
                                <h3 class="card-title">
                                    <%= movie.title %>
                                </h3>
                                <p class="card-text">
                                    <%= movie.description %>
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item fw-medium">Release Date :
                                    <%= new Date(movie.releaseDate).toLocaleDateString('en-GB') %>
                                </li>
                                <li class="list-group-item fw-medium">Genre :
                                    <%= movie.genre %>
                                </li>
                                <li class="list-group-item fw-medium">Rating :
                                    <%= movie.rating %>
                                </li>
                            </ul>
                            <div class="card-body">
                                <a href="/editMovie/<%= movie._id %>" class="btn  btn-outline-primary mx-2 card-link">Edit</a>
                                <a href="/daleteMovie/<%= movie._id %>" class="btn btn-outline-danger mx-2 card-link">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>